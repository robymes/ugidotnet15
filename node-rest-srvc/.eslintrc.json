{
    "rules": {
        "indent": 2,
        "quotes": [
            2,
            "double",
            "avoid-escape"
        ],
        "linebreak-style": 0,
        "semi": [
            2,
            "always"
        ],
        "vars-on-top": 2,
        "one-var": [
            2,
            "always"
        ],
        "no-unused-vars": [
            2, {
            "vars": "all",
            "args": "none"
            }
        ],
        "no-plusplus": 2,
        "curly": 2,
        "guard-for-in": 2,
        "no-else-return": 2,
        "no-eval": 2,
        "radix": 2,
        "no-new": 2,
        "no-use-before-define": 2,
        "new-parens": 2,
        "no-multiple-empty-lines": [
            2, {
                "max": 1
            }
        ],
        "no-spaced-func": 2,
        "no-trailing-spaces": 2,
        "no-unneeded-ternary": 2,
        "space-before-function-paren": 2
    },
    "env": {
        "browser": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "__dirname": true,
        "require": true,
        "console": true,
        "process": true
    }
}